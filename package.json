{
  "name": "cards-sql-app",
  "type": "module",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --port 56379",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "server": "nodemon ./server/server.js",
    "build:shared:once": "tsc -p shared/tsconfig.json",
    "build:shared": "tsc -p shared/tsconfig.json --watch",
    "dev": "concurrently \"npm:build:shared\" \"npm:server\"",
    "pretest:server": "npm run build:shared:once",
    "test:unit": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --config server/jest.config.mjs --runInBand",
    "test:int": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --config server/jest.config.int.mjs --runInBand",
    "api:test": "cross-env NODE_ENV=test PORT=8080 DOTENV_CONFIG_PATH=server/.env.test node -r dotenv/config server/server.js",
    "start:e2e": "ng serve --port 56379 --host 0.0.0.0",
    "cypress:open": "cypress open --project .",
    "cypress:run": "cypress run --project .",
    "cypress:open:stub": "cypress open --project . --env USE_STUBS=1,API_URL=http://localhost:8080",
    "cypress:run:stub": "cypress run --project . --env USE_STUBS=1,API_URL=http://localhost:8080",
    "cypress:open:live": "cypress open --project . --env USE_STUBS=0,API_URL=http://localhost:8080",
    "cypress:run:live": "cypress run --project . --env USE_STUBS=0,API_URL=http://localhost:8080",
    "e2e:stub:open": "concurrently -k -n WEB,TEST \"npm:start\" \"npm:__wait-and-open-stub\"",
    "e2e:stub:run": "concurrently -k -n WEB,TEST \"npm:start\" \"npm:__wait-and-run-stub\"",
    "__wait-and-open-stub": "wait-on -t 120000 http-get://localhost:56379 && npm run cypress:open:stub",
    "__wait-and-run-stub": "wait-on -t 120000 http-get://localhost:56379 && npm run cypress:run:stub",
    "e2e:live:open": "concurrently -k -n WEB,API,TEST \"npm run start:e2e\" \"npm run api:test\" \"npm run __wait-and-open-live\"",
    "e2e:live:run": "concurrently -k -n WEB,API,TEST \"npm run start:e2e\" \"npm run api:test\" \"npm run __wait-and-run-live\"",
    "__wait-and-open-live": "wait-on -t 120000 http-get://localhost:56379 http-get://localhost:8080/healthz && npm run cypress:open:live",
    "__wait-and-run-live": "wait-on -t 120000 http-get://localhost:56379 http-get://localhost:8080/healthz && npm run cypress:run:live"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.0.0",
    "@angular/cdk": "~19.0.1",
    "@angular/common": "^19.0.0",
    "@angular/compiler": "^19.0.0",
    "@angular/core": "^19.0.0",
    "@angular/forms": "^19.0.0",
    "@angular/material": "~19.0.1",
    "@angular/material-moment-adapter": "^19.0.1",
    "@angular/platform-browser": "^19.0.0",
    "@angular/platform-browser-dynamic": "^19.0.0",
    "@angular/router": "^19.0.0",
    "@ngx-translate/core": "^17.0.0",
    "@ngx-translate/http-loader": "^17.0.0",
    "@primeng/themes": "^19.0.10",
    "@types/file-saver": "^2.0.7",
    "bcryptjs": "^3.0.2",
    "body-parser": "^1.20.3",
    "dotenv": "^16.4.7",
    "file-saver": "^2.0.5",
    "jsonwebtoken": "^9.0.2",
    "ngx-cookie-service": "^19.1.2",
    "node-cron": "^4.2.1",
    "nodemon": "^3.1.9",
    "pg": "^8.14.1",
    "pg-hstore": "^2.3.4",
    "pino": "^9.9.0",
    "pino-http": "^10.5.0",
    "primeicons": "^7.0.0",
    "primeng": "^19.0.10",
    "read-excel-file": "^5.8.7",
    "rxjs": "~7.8.0",
    "sequelize": "^6.37.6",
    "tslib": "^2.3.0",
    "zod": "^4.0.17",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.0.2",
    "@angular/cli": "^19.0.2",
    "@angular/compiler-cli": "^19.0.0",
    "@types/jasmine": "~5.1.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "cypress": "^15.1.0",
    "jasmine-core": "~5.4.0",
    "jest": "^29.7.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "pino-pretty": "^13.1.1",
    "supertest": "^7.1.4",
    "wait-on": "^8.0.4"
  }
}
